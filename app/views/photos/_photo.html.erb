
<%= image_tag image_photo_path(photo), {class: 'user-photo',
                                        data_time: time_ago_in_words(photo.created_at),
                                        data_user: photo.user.id,
                                        data_user_email: photo.user.username,
                                        data_liked: (current_user.liked_photos.include?(photo) ||
                                                     current_user.photos.include?(photo)) } %>
