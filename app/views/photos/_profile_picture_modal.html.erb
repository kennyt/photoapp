<div id="profilePicModal" class="modal hide fade" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  <div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">Ã—</button>
    <h3 id="myModalLabel">Profile Picture</h3>
  </div>
  <div class="modal-body">
    <p>choose a photo to upload</p>
    <div class="new-photo-page">
      <%= simple_form_for(@user) do |f| %>
        <p>
          <%= f.file_field :profile_picture %>
        </p>
        <div class="modal-footer">
          <%= f.submit "pro-pic-it" %>
        </div>
      <% end %>
    </div>
  </div>
</div>